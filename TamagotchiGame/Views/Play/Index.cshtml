@{
  Layout = "_Layout";
}

@using TamagotchiGame.Models;

<h2>Here your TamyGothis, User!</h2>

<ul>
  @foreach (Tamagotchi pet in Model)
  {
    <li>
      <p>@pet.Name</p>
      <p>Food: @pet.food / @Tamagotchi.food_max</p>
    </li>
  }
  @if (Model.Count == 0)
  {
    <p>user, You are sad and Alone, without any Pets! Adopt one now!!</p>
  }
</ul>

<a href="/play/new/">Abdopt new Tammy</a>
